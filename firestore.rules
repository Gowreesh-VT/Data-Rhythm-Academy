rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isInstructor() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'instructor';
    }

    // Users collection - users can read/write their own data, admins can read all
    match /users/{userId} {
      allow read, write: if isAuthenticated() && isOwner(userId);
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // Admin logs collection - only admins can access
    match /admin_logs/{logId} {
      allow read, write: if isAdmin();
    }

    // Instructor-student relationships - admins and related instructors can access
    match /instructor_student_relationships/{relationshipId} {
      allow read, write: if isAdmin();
      allow read: if isAuthenticated() && 
                     (request.auth.uid == resource.data.instructorId || 
                      request.auth.uid == resource.data.studentId);
    }    // Courses collection
    match /courses/{courseId} {
      // Anyone can read courses
      allow read: if true;
      // Only authenticated users can create/update courses
      allow create, update: if request.auth != null;
      // Only the course creator or admin can delete
      allow delete: if request.auth != null && 
                       (request.auth.uid == resource.data.instructorId || isAdmin());
      // Admins can manage all courses
      allow write: if isAdmin();
    }

    // Enrollments collection
    match /enrollments/{enrollmentId} {
      // Users can read their own enrollments
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      // Users can create their own enrollments
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      // Users can update their own enrollments
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
      // Users can delete their own enrollments
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
      // Admins can access all enrollments
      allow read, write: if isAdmin();
      // Instructors can read enrollments for their courses
      allow read: if isInstructor();
    }

    // Posts collection (for course discussions, reviews, etc.)
    match /posts/{postId} {
      // Anyone can read posts
      allow read: if true;
      // Only authenticated users can create posts
      allow create: if request.auth != null;
      // Only post creators can update/delete their posts
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Reviews collection
    match /reviews/{reviewId} {
      // Anyone can read reviews
      allow read: if true;
      // Only authenticated users can create reviews
      allow create: if request.auth != null;
      // Only review creators can update/delete their reviews
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Wishlist collection
    match /wishlist/{wishlistId} {
      // Users can read their own wishlist items
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      // Users can create their own wishlist items
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      // Users can delete their own wishlist items
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}